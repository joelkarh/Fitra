
{% assign mainProduct = all_products['fitra-activity-band']  %}
<h1>
  {{ mainProduct.title }}
</h1>
<div id="product-images">
  {% for image in mainProduct.images %}
    <div class="single-product-image">
      <img src="{{ image | img_url:'large' }}" alt="">
    </div>
  {% endfor %}
</div>
<div id="product-info">
  <div class="headline">
    <h2>Hassle free fitness tracking</h2>
  </div>
  <div class="description">
    <h3>information</h3>
    <p>{{ mainProduct.description }}</p>
  </div>
  <div class="details">
    <ul>
      <li>
        list item 1
      </li>
      <li>
        list item 2
      </li>
    </ul>
  </div>
  <div class="form-wrapper">
    <form action="/cart/add" method="post" enctype="multipart/form-data" id="AddToCartForm">
      <laberl for ="productSelect" >{{ mainProduct.options[0] }}</laberl>
      <select  name="id" id="productSelect">
        {% for variant in mainProduct.variants %}
         <option value="{{ variant.id  }} ">{{ variant.title }}</option>
        {% endfor %}
      </select>

      <button type="submit" name="add" id="AddToCart">
        Add to cart
      <span class="product-price">{{ mainProduct.price | money_without_trailing_zeros }}</span>
      </button>
    </form>
  </div>


</div>



